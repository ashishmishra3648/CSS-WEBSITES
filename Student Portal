<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student Portal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .navbar-custom {
      background: linear-gradient(90deg, black, cyan);
    }
    .content-section {
      margin-top: 30px;
    }
    .actions-row {
      margin-bottom: 25px;
    }
    .student-table th, .student-table td {
      vertical-align: middle;
    }
  </style>
</head>
<body>
<nav class="navbar navbar-custom mb-4">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold text-white">Student Portal</a>
    <form class="d-flex" role="search" onsubmit="event.preventDefault()">
      <input id="searchBox" class="form-control me-2" type="search" placeholder="Search Student" aria-label="Search">
    </form>
  </div>
</nav>
<div class="container content-section">
  <div class="row actions-row">
    <div class="col d-flex gap-3">
      <button class="btn btn-primary" id="allBtn">All Students</button>
      <button class="btn btn-info text-white" id="maleBtn">Male</button>
      <button class="btn btn-success" id="femaleBtn">Female</button>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div id="tableSection"></div>
    </div>
  </div>
</div>

<script>
  const students = [
    {id: 101, name: "Laila", gender: "female"},
    {id: 102, name: "Raja", gender: "male"},
    {id: 103, name: "Madhav", gender: "male"},
    {id: 104, name: "Chintu", gender: "male"},
    {id: 105, name: "Sindhu", gender: "female"},
    {id: 106, name: "Sheela", gender: "female"},
    {id: 107, name: "Mala", gender: "female"},
    {id: 108, name: "Srikanth", gender: "male"},
    {id: 109, name: "Anjali", gender: "female"},
    {id: 110, name: "Arjun", gender: "male"}
  ];

  function renderTable(studentArr) {
    let tableHtml = `
      <table class="table table-bordered student-table mt-3 bg-white shadow">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Gender</th>
          </tr>
        </thead>
        <tbody>
    `;
    if (studentArr.length === 0) {
      tableHtml += `<tr><td colspan="3" class="text-center">No students found</td></tr>`;
    } else {
      studentArr.forEach(s => {
        tableHtml += `
          <tr>
            <td>${s.id}</td>
            <td>${s.name}</td>
            <td>${s.gender.charAt(0).toUpperCase() + s.gender.slice(1)}</td>
          </tr>
        `;
      });
    }
    tableHtml += `
        </tbody>
      </table>
    `;
    document.getElementById('tableSection').innerHTML = tableHtml;
  }

  // Initial table load
  renderTable(students);

  // Button event listeners
  document.getElementById('allBtn').onclick = () => renderTable(students);
  document.getElementById('maleBtn').onclick = () => renderTable(students.filter(s => s.gender === 'male'));
  document.getElementById('femaleBtn').onclick = () => renderTable(students.filter(s => s.gender === 'female'));

  // Search functionality
  document.getElementById('searchBox').addEventListener('input', function() {
    const q = this.value.trim().toLowerCase();
    renderTable(
      students.filter(s =>
        s.name.toLowerCase().includes(q) ||
        s.id.toString().includes(q) ||
        s.gender.toLowerCase().includes(q)
      )
    );
  });
</script>
</body>
</html>
