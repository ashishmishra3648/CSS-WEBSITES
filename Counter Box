<body>
  <div class="counter-container" id="counterBox">
    <h2 class="counter-title">Interactive Counter</h2>
    
    <div class="counter-content">
      <button class="btn-counter" id="minusBtn" aria-label="Decrease count">
        <i class="bi bi-dash-lg"></i>
      </button>
      
      <div class="counter-display">
        <div class="circle" id="numberDisplay">
          <span class="counter-value" id="counterValue">0</span>
        </div>
        <div class="counter-label">Current Count</div>
      </div>
      
      <button class="btn-counter" id="plusBtn" aria-label="Increase count">
        <i class="bi bi-plus-lg"></i>
      </button>
    </div>
    
    <button class="counter-reset" id="resetBtn">Reset Counter</button>
    
    <div class="counter-info">
      <p><span style="color: #f44336;">●</span> Negative numbers: Red</p>
      <p><span style="color: #ffffff; border: 1px solid #ccc; border-radius: 50%; padding: 0 5px;">●</span> Zero: White</p>
      <p><span style="color: #28a745;">●</span> Positive even: Green</p>
      <p><span style="color: #0d6efd;">●</span> Positive odd: Blue</p>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Elements
    const plusBtn = document.getElementById('plusBtn');
    const minusBtn = document.getElementById('minusBtn');
    const resetBtn = document.getElementById('resetBtn');
    const counterValue = document.getElementById('counterValue');
    const counterBox = document.getElementById('counterBox');
    const numberDisplay = document.getElementById('numberDisplay');

    let count = 0;

    function updateDisplay() {
      // Update the counter value display
      counterValue.textContent = count;
      
      // Update colors based on count value
      if (count < 0) {
        // Negative numbers - red background
        counterBox.style.backgroundColor = "#f44336";
        counterValue.style.color = "#fff";
        numberDisplay.style.borderColor = "#fff";
        numberDisplay.style.backgroundColor = "#d32f2f";
      } else if (count === 0) {
        // Zero - default colors
        counterBox.style.backgroundColor = "#ffffff";
        counterValue.style.color = "#333";
        numberDisplay.style.borderColor = "#333";
        numberDisplay.style.backgroundColor = "#fff";
      } else if (count > 0) {
        // Positive numbers
        if (count % 2 === 0) {
          // Even numbers - green
          counterBox.style.backgroundColor = "#28a745";
          counterValue.style.color = "#fff";
          numberDisplay.style.borderColor = "#fff";
          numberDisplay.style.backgroundColor = "#218838";
        } else {
          // Odd numbers - blue
          counterBox.style.backgroundColor = "#0d6efd";
          counterValue.style.color = "#fff";
          numberDisplay.style.borderColor = "#fff";
          numberDisplay.style.backgroundColor = "#0b5ed7";
        }
      }
    }

    // Event listeners for buttons
    plusBtn.addEventListener('click', () => {
      count++;
      updateDisplay();
    });

    minusBtn.addEventListener('click', () => {
      count--;
      updateDisplay();
    });

    resetBtn.addEventListener('click', () => {
      count = 0;
      updateDisplay();
    });

    // Initialize display
    updateDisplay();
  </script>
</body>
