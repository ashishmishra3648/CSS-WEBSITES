<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Simple Circle Mover</title>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet" />

<style>
  body, html {
    margin: 0; padding: 0; height: 100%;
    background: #f0f8ff;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .container-fluid {
    position: relative;
    width: 100vw;
    height: 100vh;
    padding: 15px;
    box-sizing: border-box;
    outline: none;
  }

  #circle {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 80px;
    height: 80px;
    background-color: #0d6efd;
    border-radius: 50%;
    box-shadow: 0 0 15px rgba(13, 110, 253, 0.6);
    cursor: pointer;
    user-select: none;
    transform: translate(-50%, -50%);
    transition: top 0.2s ease, left 0.2s ease;
  }

  .btn-control {
    position: fixed;
    bottom: 35px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 20px;
  }

  .btn-control button {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    font-size: 1.8rem;
    font-weight: bold;
  }
</style>
</head>
<body>
  <div class="container-fluid" tabindex="0" aria-label="Circle movement container">
    <div id="circle" role="img" aria-label="Movable circle"></div>

    <div class="btn-control" role="group" aria-label="Movement buttons">
      <button class="btn btn-primary" id="upBtn" aria-label="Move Up"><i class="bi bi-arrow-up"></i></button>
      <button class="btn btn-primary" id="leftBtn" aria-label="Move Left"><i class="bi bi-arrow-left"></i></button>
      <button class="btn btn-primary" id="downBtn" aria-label="Move Down"><i class="bi bi-arrow-down"></i></button>
      <button class="btn btn-primary" id="rightBtn" aria-label="Move Right"><i class="bi bi-arrow-right"></i></button>
    </div>
  </div>

  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const circle = document.getElementById('circle');
    const upBtn = document.getElementById('upBtn');
    const downBtn = document.getElementById('downBtn');
    const leftBtn = document.getElementById('leftBtn');
    const rightBtn = document.getElementById('rightBtn');
    const container = document.querySelector('.container-fluid');
    const step = 15;

    let topPos = container.clientHeight / 2;
    let leftPos = container.clientWidth / 2;

    function moveCircle(direction) {
      const halfHeight = circle.offsetHeight / 2;
      const halfWidth = circle.offsetWidth / 2;
      const maxTop = container.clientHeight - halfHeight;
      const maxLeft = container.clientWidth - halfWidth;
      const minTop = halfHeight;
      const minLeft = halfWidth;

      switch (direction) {
        case 'up':
          topPos = Math.max(minTop, topPos - step);
          break;
        case 'down':
          topPos = Math.min(maxTop, topPos + step);
          break;
        case 'left':
          leftPos = Math.max(minLeft, leftPos - step);
          break;
        case 'right':
          leftPos = Math.min(maxLeft, leftPos + step);
          break;
      }
      circle.style.top = topPos + 'px';
      circle.style.left = leftPos + 'px';
    }

    upBtn.addEventListener('click', () => moveCircle('up'));
    downBtn.addEventListener('click', () => moveCircle('down'));
    leftBtn.addEventListener('click', () => moveCircle('left'));
    rightBtn.addEventListener('click', () => moveCircle('right'));

    container.addEventListener('keydown', (e) => {
      switch (e.key) {
        case 'ArrowUp':
          e.preventDefault();
          moveCircle('up');
          break;
        case 'ArrowDown':
          e.preventDefault();
          moveCircle('down');
          break;
        case 'ArrowLeft':
          e.preventDefault();
          moveCircle('left');
          break;
        case 'ArrowRight':
          e.preventDefault();
          moveCircle('right');
          break;
      }
    });

    container.focus();

    window.addEventListener('resize', () => {
      const halfHeight = circle.offsetHeight / 2;
      const halfWidth = circle.offsetWidth / 2;
      topPos = Math.min(topPos, container.clientHeight - halfHeight);
      leftPos = Math.min(leftPos, container.clientWidth - halfWidth);
      circle.style.top = topPos + 'px';
      circle.style.left = leftPos + 'px';
    });
  </script>
</body>
</html>
