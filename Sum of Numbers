<body>
  <div class="number-container shadow">
    <!-- Number 1 Section -->
    <div>
      <label class="section-title" for="num1input">Number 1</label>
      <div class="input-group mb-2">
        <input type="number" class="form-control" id="num1input" placeholder="Enter number 1">
        <button class="btn btn-primary" id="addNum1">Add</button>
      </div>
      <div class="num-list" id="num1List"></div>
      <div class="d-grid mb-2">
        <button class="btn btn-outline-primary" id="sumNum1Btn">Sum Number 1</button>
      </div>
      <div class="sum-box" id="sumNum1Box" style="display:none;">
        Sum Number 1: <span id="sumNum1"></span>
      </div>
    </div>

    <div class="divider"></div>

    <!-- Number 2 Section -->
    <div>
      <label class="section-title" for="num2input">Number 2</label>
      <div class="input-group mb-2">
        <input type="number" class="form-control" id="num2input" placeholder="Enter number 2">
        <button class="btn btn-info text-white" id="addNum2">Add</button>
      </div>
      <div class="num-list" id="num2List"></div>
      <div class="d-grid mb-2">
        <button class="btn btn-outline-info" id="sumNum2Btn">Sum Number 2</button>
      </div>
      <div class="sum-box" id="sumNum2Box" style="display:none;">
        Sum Number 2: <span id="sumNum2"></span>
      </div>
    </div>

    <div class="d-grid mt-3 mb-2">
      <button class="btn btn-success fw-bold" id="sumAllBtn">Sum of All</button>
    </div>
    <div class="sum-box" id="sumBox" style="display:none;">
      Total Sum: <span id="totalSum"></span>
    </div>
  </div>

  <script>
    // Inputs and Buttons
    const num1Input = document.getElementById('num1input');
    const num2Input = document.getElementById('num2input');
    const addNum1Btn = document.getElementById('addNum1');
    const addNum2Btn = document.getElementById('addNum2');
    const num1ListDiv = document.getElementById('num1List');
    const num2ListDiv = document.getElementById('num2List');
    const sumNum1Btn = document.getElementById('sumNum1Btn');
    const sumNum2Btn = document.getElementById('sumNum2Btn');
    const sumNum1Box = document.getElementById('sumNum1Box');
    const sumNum2Box = document.getElementById('sumNum2Box');
    const sumAllBtn = document.getElementById('sumAllBtn');
    const sumBoxDiv = document.getElementById('sumBox');
    const sumNum1Span = document.getElementById('sumNum1');
    const sumNum2Span = document.getElementById('sumNum2');
    const totalSumSpan = document.getElementById('totalSum');

    let num1Arr = [];
    let num2Arr = [];

    function renderNumList(arr, container) {
      container.innerHTML = '';
      arr.forEach(num => {
        const span = document.createElement('span');
        span.textContent = num;
        container.appendChild(span);
      });
    }

    addNum1Btn.onclick = () => {
      let val = num1Input.value.trim();
      if (val !== "") {
        num1Arr.push(Number(val));
        num1Input.value = "";
        renderNumList(num1Arr, num1ListDiv);
        sumNum1Box.style.display = "none";
        sumBoxDiv.style.display = "none";
      } else {
        num1Input.focus();
      }
    };

    addNum2Btn.onclick = () => {
      let val = num2Input.value.trim();
      if (val !== "") {
        num2Arr.push(Number(val));
        num2Input.value = "";
        renderNumList(num2Arr, num2ListDiv);
        sumNum2Box.style.display = "none";
        sumBoxDiv.style.display = "none";
      } else {
        num2Input.focus();
      }
    };

    sumNum1Btn.onclick = () => {
      const sum1 = num1Arr.reduce((a, b) => a + b, 0);
      sumNum1Span.textContent = sum1;
      sumNum1Box.style.display = "block";
      sumNum2Box.style.display = "none";
      sumBoxDiv.style.display = "none";
    };

    sumNum2Btn.onclick = () => {
      const sum2 = num2Arr.reduce((a, b) => a + b, 0);
      sumNum2Span.textContent = sum2;
      sumNum2Box.style.display = "block";
      sumNum1Box.style.display = "none";
      sumBoxDiv.style.display = "none";
    };

    sumAllBtn.onclick = () => {
      const sum1 = num1Arr.reduce((a, b) => a + b, 0);
      const sum2 = num2Arr.reduce((a, b) => a + b, 0);
      const total = sum1 + sum2;
      totalSumSpan.textContent = total;
      sumBoxDiv.style.display = "block";
      sumNum1Box.style.display = "none";
      sumNum2Box.style.display = "none";
    };

    num1Input.addEventListener("keyup", function(event) {
      if (event.key === "Enter") addNum1Btn.click();
    });
    num2Input.addEventListener("keyup", function(event) {
      if (event.key === "Enter") addNum2Btn.click();
    });

    renderNumList(num1Arr, num1ListDiv);
    renderNumList(num2Arr, num2ListDiv);
  </script>
</body>
</html>
