<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Create & Delete Circles with Counts</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <style>
    body {
      background: #f5f9ff;
      min-height: 100vh;
      padding: 20px;
    }
    .circle-container {
      margin-top: 20px;
      min-height: 100px;
      border: 2px dashed #a3c8ff;
      border-radius: 1rem;
      display: flex;
      flex-wrap: wrap;
      gap: 15px;
      padding: 20px;
      justify-content: flex-start;
      align-items: flex-start;
    }
    .circle {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      background-color: #0d6efd;
      box-shadow: 0 0 12px rgba(13,110,253,0.7);
      cursor: pointer;
      position: relative;
      user-select: none;
      transition: box-shadow 0.3s, background-color 0.3s;
    }
    .circle.selected {
      background-color: #084298;
      box-shadow: 0 0 18px rgba(8, 66, 152, 0.95);
    }
    .instructions {
      margin-bottom: 10px;
      font-weight: 500;
      color: #054a7f;
    }
    .counts {
      margin-top: 15px;
      font-weight: 600;
      color: #0a3e75;
    }
  </style>
</head>
<body>
  <div>
    <button class="btn btn-primary me-3" id="createCircleBtn">CREATE CIRCLE</button>
    <button class="btn btn-danger" id="deleteCircleBtn">DELETE CIRCLE</button>
    <p class="instructions">Click circles to toggle select for deletion.</p>
    <div class="circle-container" id="circleContainer" aria-label="Circles container" role="list"></div>
    <div class="counts">
      Total Circles: <span id="totalCount">0</span> | Selected Circles: <span id="selectedCount">0</span>
    </div>
  </div>

  <script>
    const createBtn = document.getElementById('createCircleBtn');
    const deleteBtn = document.getElementById('deleteCircleBtn');
    const circleContainer = document.getElementById('circleContainer');
    const totalCountSpan = document.getElementById('totalCount');
    const selectedCountSpan = document.getElementById('selectedCount');

    let circleIdCounter = 0;

    function updateCounts() {
      const circles = circleContainer.querySelectorAll('.circle');
      const selectedCircles = circleContainer.querySelectorAll('.circle.selected');
      totalCountSpan.textContent = circles.length;
      selectedCountSpan.textContent = selectedCircles.length;
    }

    function createCircle() {
      const circle = document.createElement('div');
      circle.classList.add('circle');
      circle.dataset.selected = 'false';
      circle.dataset.circleId = circleIdCounter++;
      circle.setAttribute('role', 'listitem');
      circle.setAttribute('aria-label', 'Selectable circle');
      circle.addEventListener('click', () => {
        const selected = circle.dataset.selected === 'true';
        circle.dataset.selected = !selected;
        circle.classList.toggle('selected', !selected);
        updateCounts();
      });
      circleContainer.appendChild(circle);
      updateCounts();
    }

    function deleteSelectedCircles() {
      const circles = [...circleContainer.querySelectorAll('.circle')];
      circles.forEach(circle => {
        if (circle.dataset.selected === 'true') {
          circle.remove();
        }
      });
      updateCounts();
    }

    createBtn.addEventListener('click', createCircle);
    deleteBtn.addEventListener('click', deleteSelectedCircles);

    updateCounts();
  </script>
</body>
</html>
